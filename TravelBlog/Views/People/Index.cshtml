@model IEnumerable<TravelBlog.Models.People>
@{
    ViewData["Title"] = "People List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}   
<hr/>
<hr/>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
		<th>
            Options
        </th>
	</tr>
	
	@foreach(var listPeople in Model)
    {
         <tr>
            <td> 
                @Html.DisplayFor(model => listPeople.Name)
            </td>
		    <td>
                @Html.ActionLink("Edit", "Edit", new { id = listPeople.PeopleId }) |
                @Html.ActionLink("Details", "Details", new { id = listPeople.PeopleId}) |
                @Html.ActionLink("Delete", "Delete", new { id = listPeople.PeopleId})
            </td>
		</tr>
	}
</table>

<center>
    <p class="create">
        @Html.ActionLink("Create New", "Create")
    </p>
</center>